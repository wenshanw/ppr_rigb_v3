issn = {21698996},
journal = {Journal of Geophysical Research: Atmospheres},
keywords = {201805,CloudSat,cloud phase,cloud radiative effects,global energy budget,mixed cloud,mixed-phase clouds,satellite remote sensing},
mendeley-tags = {201805,mixed cloud},
title = {{The role of cloud phase in Earth's radiation budget}},
